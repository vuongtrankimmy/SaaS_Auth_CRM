@layout Layout.AuthLayout
@page "/auth/account"
<!--begin::Form-->
<form class="form w-100" novalidate="novalidate" id="kt_sign_in_form" method="post" action="auth/account/password">
	<!--begin::Heading-->
	<div class="text-center mb-10">
		<!--begin::Title-->
		<h1 class="text-dark mb-3">Sign In to Metronic</h1>
		<!--end::Title-->
		<!--begin::Link-->
		<div class="text-gray-400 fw-bold fs-4">
			With your Google Account to continue to Gmail. This account will be available to other Google apps in the browser.
		</div>
		<!--end::Link-->
	</div>
	<!--begin::Heading-->
	<!--begin::Input group-->
	<div class="fv-row mb-10">
		<!--begin::Label-->
		<label class="form-label fs-6 fw-bolder text-dark">Email or Phone</label>
		<!--end::Label-->
		<!--begin::Input-->
		<input class="form-control form-control-lg form-control-solid" placeholder="Email or Phone" type="text" name="account" autocomplete="off" />
		<!--end::Input-->
	</div>
	<!--end::Input group-->
	<!--begin::Actions-->
	<div class="d-flex flex-wrap justify-content-center pb-lg-0">
		<a href="auth/account/password" type="button" id="kt_sign_in_form" class="btn btn-lg btn-primary fw-bolder me-4">
			<span class="indicator-label">Next</span>
			<span class="indicator-progress">
				Please wait...
				<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
			</span>
		</a>
		<a href="auth/signup/your_name" class="btn btn-lg btn-light-primary fw-bolder">Create account</a>
	</div>
	<!--end::Actions-->
</form>
<!--end::Form-->
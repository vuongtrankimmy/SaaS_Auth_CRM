@layout Layout.AuthLayout
@page "/auth/account/password"
<!--begin::Form-->
<form class="form w-100" novalidate="novalidate" id="kt_sign_in_form" method="post" action="auth/account/verify_type">
	<!--begin::Heading-->
	<div class="text-center mb-10">
		<!--begin::Title-->
		<h1 class="text-dark mb-3">Sign In to Metronic</h1>
		<!--end::Title-->
		<!--begin::Link-->
		<div class="text-gray-400 fw-bold fs-4">
			trankimmyvuong@gmail.com
		</div>
		<!--end::Link-->
	</div>
	<!--begin::Heading-->
	<div class="fv-row mb-10">
		<!--begin::Wrapper-->
		<div class="d-flex flex-stack mb-2">
			<!--begin::Label-->
			<label class="form-label fw-bolder text-dark fs-6 mb-0">Password</label>
			<!--end::Label-->
			<!--begin::Link-->
			<a href="auth/account/reset_password" class="link-primary fs-6 fw-bolder">Forgot Password ?</a>
			<!--end::Link-->
		</div>
		<!--end::Wrapper-->
		<!--begin::Input-->
		<input class="form-control form-control-lg form-control-solid" type="password" name="password" autocomplete="off" />
		<!--end::Input-->
	</div>
	<!--begin::Actions-->
	<div class="text-center">
		<!--begin::Submit button-->
		<!--begin::Actions-->
		<div class="d-flex flex-wrap justify-content-center pb-lg-0">
			<a href="auth/account/verify_type" type="button" id="kt_password_reset_submit" class="btn btn-lg btn-primary fw-bolder me-4">
				<span class="indicator-label">Next</span>
				<span class="indicator-progress">
					Please wait...
					<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
				</span>
			</a>
			<a href="auth/account" class="btn btn-lg btn-light-primary fw-bolder">Try another way</a>
		</div>
		<!--end::Actions-->
		<!--end::Submit button-->
	</div>
	<!--end::Actions-->
</form>
<!--end::Form-->
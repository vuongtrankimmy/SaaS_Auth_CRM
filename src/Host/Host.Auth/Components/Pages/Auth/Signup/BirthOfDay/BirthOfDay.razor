@layout Layout.AuthLayout
@page "/auth/signup/bith_of_day"
<!--begin::Form-->
<form class="form w-100" novalidate="novalidate" id="kt_sign_in_form" action="#">
    <!--begin::Heading-->
    <div class="text-center mb-10">
        <!--begin::Title-->
        <h1 class="text-dark mb-3">
            Basic information
        </h1>
        <!--end::Title-->
        <!--begin::Link-->
        <div class="text-gray-400 fw-bold fs-4">
            Enter your birthday and gender
        </div>
        <!--end::Link-->
    </div>
    <!--begin::Heading-->
    <!--begin::Input group-->
    <div class="fv-row mb-10">
        <!--begin::Input group-->
        <div class="input-group input-group-solid mb-5">
            <span class="input-group-text bg-white">Birthday</span>
            <input class="form-control form-control-solid" placeholder="Pick date rage" id="kt_daterangepicker_3" />
        </div>
    </div>
    <!--end::Input group-->
    <!--begin::Input group-->
    <div class="fv-row mb-10">
        <div class="input-group input-group-solid mb-5 d-flex">
            <span class="input-group-text bg-white">Gender &nbsp; </span>
            <div class="w-80">
                <select class="form-select form-select-solid" data-control="select2" data-placeholder="Select an option" data-hide-search="true">
                    <option value="1">Female</option>
                    <option value="2" selected>Male</option>
                    <option value="3">Rather not say</option>
                    <option value="4">Other</option>
                </select>
            </div>
        </div>
    </div>
    <!--end::Input group-->
    <!--begin::Actions-->
    <div class="d-flex flex-wrap justify-content-center pb-lg-0">
        <a href="auth/signup/phone" type="button" id="kt_password_reset_submit" class="btn btn-lg btn-primary fw-bolder me-4">
            <span class="indicator-label">Next</span>
            <span class="indicator-progress">
                Please wait...
                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
            </span>
        </a>
    </div>
    <!--end::Actions-->
</form>
<!--end::Form-->